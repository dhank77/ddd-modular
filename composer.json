{
    "name": "hitech/ddd-modular-toolkit",
    "description": "A Laravel DDD Modular Toolkit for feature-based architecture.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "dhank77",
            "email": "d41113512@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Hitech\\DDDModularToolkit\\": "src/"
        },
        "files": [
            "src/Helpers/PathHelper.php"
        ]
    },
    "extra": {
        "laravel": {
            "providers": [
                "Hitech\\DDDModularToolkit\\Providers\\DDDModularToolkitServiceProvider"
            ]
        }
    },
    "require": {
        "php": "^8.1",
        "illuminate/support": "^12.19",
        "illuminate/console": "^12.19"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "orchestra/testbench": "^10.0"
    }
}
